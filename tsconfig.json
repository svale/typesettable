{
  "compilerOptions": {
    "declaration": true,
    "inlineSourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": false,
    "sourceMap": true,
    "stripInternal": true,
    "target": "es2015",
    "skipLibCheck": true,
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
